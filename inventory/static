######################################################
##
## The static inventory puts the hosts in different groups as described here: https://docs.ansible.com/ansible/latest/user_guide/intro_inventory.html#hosts-and-groups
## Variables would be defined directly for each host, including the ansible_user, the login user with sudoers permissions.
## For authentication, either the password or the SSH Private Key can be used.
##
######################################################

[hdp-mgmnt]
mgmnt ansible_host=svs0.field.hortonworks.com ansible_user=centos ansible_ssh_private_key_file="~/.ssh/sv_h.pem" rack=/default-rack

[hdp-nn1]
nn1 ansible_host=svs1.field.hortonworks.com ansible_user=centos ansible_ssh_private_key_file="~/.ssh/sv_h.pem" rack=/default-rack

[hdp-nn2]
nn2 ansible_host=svs2.field.hortonworks.com ansible_user=centos ansible_ssh_private_key_file="~/.ssh/sv_h.pem" rack=/default-rack

[hdp-nn3]
nn3 ansible_host=svs3.field.hortonworks.com ansible_user=centos ansible_ssh_private_key_file="~/.ssh/sv_h.pem" rack=/default-rack

[hdp-slave]
slave1 ansible_host=svs4.field.hortonworks.com ansible_user=centos ansible_ssh_private_key_file="~/.ssh/sv_h.pem" rack=/default-rack
slave2 ansible_host=svs5.field.hortonworks.com ansible_user=centos ansible_ssh_private_key_file="~/.ssh/sv_h.pem" rack=/default-rack
slave3 ansible_host=svs6.field.hortonworks.com ansible_user=centos ansible_ssh_private_key_file="~/.ssh/sv_h.pem" rack=/default-rack

[hdp-edge]
edge ansible_host=svs7.field.hortonworks.com ansible_user=centos ansible_ssh_private_key_file="~/.ssh/sv_h.pem" rack=/default-rack
